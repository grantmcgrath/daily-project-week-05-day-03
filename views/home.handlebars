<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Todo List- Daily Project</title>
  <link rel="stylesheet" href="css/styles.css">
</head>

<body>
  <h1>Todo List</h1>

  <section id="addTodo">
    <form action="/" method="post">
      <input type="text" name="task" placeholder="Add a todo...">
      <button type="submit" name="submit">Add to List</button>
    </form>
  </section>
  <section id="todos">
    <form action="/completed" method="post">
      <ul>
        {{#todos}}
          <li>
            <input type="checkbox" name="completed" value="{{.}}">
            <label type="text">{{.}}</label>
          </li>
        {{/todos}}
      </ul>
      {{#if todos}}
        <button type="submit" name="completed">Mark Complete</button>
      {{/if}}
    </form>

  </section>
  <section id="completed">
    {{#if completed}}
      <h2>Completed Tasks</h2>
      <ul>
        {{#completed}}
          <li>{{.}}</li>
        {{/completed}}
      </ul>
    {{/if}}
  </section>
</body>

</html>
